<h1>Register Application</h1>
<div class="row">
  <div class="col-md-4">
    <%= form_for @registered_application do |f| %>
    <div class="form">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: 'Enter the name of the website' %>
        </div>
        <div class="form-group">
          <%= f.label :url %>
          <%= f.text_field :url, class: "form-control", placeholder: 'Enter the URL' %>
        </div>
        <div class="form-group">
          <%= f.submit "Add Application", class: 'btn btn-success' %>
        </div>
    </div>
    <% end %>

    <%= link_to "Back", registered_applications_path %>

  </div>
</div>
